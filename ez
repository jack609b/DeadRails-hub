-- Danh s√°ch ch·ªß s·ªü h·ªØu ƒë∆∞·ª£c ph√©p chia s·∫ª script
local allowedUserIds = {
    5231420503, -- ch√≠nh b·∫°n
    8348136049,
    3019899298,
    1845194807
}

local localPlayer = game.Players.LocalPlayer
local allowed = false

for _, ownerId in ipairs(allowedUserIds) do
    if localPlayer.UserId == ownerId or localPlayer:IsFriendsWith(ownerId) then
        allowed = true
        break
    end
end

if not allowed then
    localPlayer:Kick("Th√¥ng b√°oüî•:Script n√†y ch·ªâ d√†nh cho ch·ªß s·ªü h·ªØu ho·∫∑c b·∫°n b√® ƒë√£ ƒë∆∞·ª£c ch·ªâ ƒë·ªãnh.")
    return
end


l-- T·∫£i th∆∞ vi·ªán GUI
local OrionLib = loadstring(game:HttpGet("https://raw.githubusercontent.com/shlexware/Orion/main/source"))()

-- T·∫°o c·ª≠a s·ªï GUI
local Window = OrionLib:MakeWindow({
    Name = "Dead Rails-Hub | By: Minh",
    HidePremium = false,
    SaveConfig = true,
    ConfigFolder = "DeadRailsHubMinh"
})

-- Tabs
local MainTab = Window:MakeTab({Name = "Ch·ª©c nƒÉng ch√≠nh", Icon = "rbxassetid://4483345998", PremiumOnly = false})
local MovementTab = Window:MakeTab({Name = "Di chuy·ªÉn", Icon = "rbxassetid://4483345998", PremiumOnly = false})
local VisualTab = Window:MakeTab({Name = "H√¨nh ·∫£nh", Icon = "rbxassetid://4483345998", PremiumOnly = false})
local ProtectionTab = Window:MakeTab({Name = "B·∫£o v·ªá", Icon = "rbxassetid://4483345998", PremiumOnly = false})

-- Danh s√°ch t·ªça ƒë·ªô cu·ªëi map (c·∫≠p nh·∫≠t t√πy b·∫£n ƒë·ªì)
local winPositions = {
    Vector3.new(0, 50, 1000),
    Vector3.new(0, 50, 1100),
    Vector3.new(0, 50, 1200),
}

-- Auto Win (di chuy·ªÉn qua c√°c t·ªça ƒë·ªô cu·ªëi map)
MainTab:AddToggle({
    Name = "Auto Win (Testing)",
    Default = false,
    Callback = function(Value)
        _G.AutoWin = Value
        task.spawn(function()
            while _G.AutoWin do
                for _, pos in ipairs(winPositions) do
                    if not _G.AutoWin then break end
                    game.Players.LocalPlayer.Character:MoveTo(pos)
                    task.wait(1.5)
                end
                -- Th√¥ng b√°o khi ho√†n t·∫•t 1 v√≤ng
                OrionLib:MakeNotification({
                    Name = "Auto Win",
                    Content = "ƒê√£ ho√†n t·∫•t d·ªãch chuy·ªÉn ƒë·∫øn cu·ªëi m√†n!",
                    Image = "rbxassetid://4483345998",
                    Time = 3
                })
                task.wait(1)
            end
        end)
    end
})



-- Bi·∫øn tr·∫°ng th√°i
local gunAuraEnabled = false
local infiniteJumpEnabled = false
local noclipEnabled = false

-- Gun Aura
MainTab:AddToggle({
    Name = "Gun Aura",
    Default = false,
    Callback = function(Value)
        gunAuraEnabled = Value
        if Value then
            task.spawn(function()
                while gunAuraEnabled do
                    for _, v in pairs(game:GetService("Players"):GetPlayers()) do
                        if v ~= game.Players.LocalPlayer and v.Character and v.Character:FindFirstChild("HumanoidRootPart") then
                            local tool = game.Players.LocalPlayer.Character:FindFirstChildOfClass("Tool")
                            if tool and tool:FindFirstChild("Handle") then
                                tool:Activate()
                                tool.Handle.CFrame = v.Character.HumanoidRootPart.CFrame
                            end
                        end
                    end
                    task.wait(0.3)
                end
            end)
        end
    end
})

-- Auto Collect Bond & Ammo
MainTab:AddButton({
    Name = "Thu th·∫≠p Bond & ƒê·∫°n",
    Callback = function()
        local player = game.Players.LocalPlayer
        local char = player.Character or player.CharacterAdded:Wait()
        local hrp = char:WaitForChild("HumanoidRootPart")

        for _, obj in pairs(workspace:GetDescendants()) do
            if obj:IsA("Tool") and (obj.Name:lower():find("bond") or obj.Name:lower():find("ammo")) and obj:FindFirstChild("Handle") then
                firetouchinterest(hrp, obj.Handle, 0)
                task.wait()
                firetouchinterest(hrp, obj.Handle, 1)
            end
        end
    end
})

-- Thu th·∫≠p t·∫•t c·∫£ Bond
